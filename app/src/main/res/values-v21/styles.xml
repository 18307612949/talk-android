<resources>

    <style name="PositiveButton">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:textColor">@drawable/selector_positive_button_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/selector_positive_button</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="NegativeButton">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:textColor">@drawable/selector_negative_button_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/selector_negative_button</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="MSV_ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingLeft">@dimen/search_icon_padding</item>
        <item name="android:paddingRight">@dimen/search_icon_padding</item>
    </style>
</resources>
