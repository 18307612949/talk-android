<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_item">

    <TextView
        android:id="@+id/header_text"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:textColor="?attr/talkColorPrimary"
        android:textSize="24sp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="A" />

    <ImageView
        android:id="@+id/header_img"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:contentDescription="@null"
        tools:src="@drawable/ic_me"
        tools:visibility="visible"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <TextView
        android:id="@+id/name"
        style="@style/ItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/contacts_text_left_margin"
        android:layout_marginRight="56dp"
        android:ellipsize="end"
        android:singleLine="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        app:riv_oval="true" />

    <ImageView
        android:id="@+id/mask"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_circle_mask"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/img_check_layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_red" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_done_color" />
    </FrameLayout>
</RelativeLayout>