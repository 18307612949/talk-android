<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/add_new_members"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawablePadding="32dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawableLeft="@drawable/ic_add_member_grey"
        android:drawableStart="@drawable/ic_add_member_grey"
        android:background="@drawable/bg_item"
        android:textSize="16sp"
        android:textColor="#606060"
        android:text="@string/add_new_members"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/add_from_team"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawablePadding="32dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawableLeft="@drawable/ic_team_grey"
        android:drawableStart="@drawable/ic_team_grey"
        android:background="@drawable/bg_item"
        android:textSize="16sp"
        android:textColor="#606060"
        android:text="@string/add_from_team"
        android:gravity="center_vertical" />

</LinearLayout>